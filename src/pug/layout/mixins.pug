//- Nested mixin for mixin header__nav - dropdown menu
mixin dropdown_menu(menu_items)
	ul.dropdown-menu
		each top_item in menu_items
			li.dropdown-menu__submenu-item 
				if top_item.child
					ul.dropdown-menu__submenu-list
						each child_item in top_item.child
							li.dropdown-menu__submenu-list-item
								+droplinks(child_item)

//- This mixin generates the links
mixin droplinks(item)
	- var linkatts = { 'href': item.link }
	a(class="dropdown-menu__list-link")&attributes(linkatts)= item.title

//- This mixin iterates through and creates each menu item
mixin sidebar__nav-list(menu_items)
	ul.sidebar__nav-list
		each top_item in menu_items
			li.sidebar__list-item
				+navlinks(top_item)
					                                
//- This mixin generates the links
mixin navlinks(item)
	- var linkatts = { 'href': item.link }
	a(class="sidebar__list-link")&attributes(linkatts)= item.title


//- Main slider item mixin
mixin main-slider__item(imageUrl, imageAlt, logoUrl, logoAlt, productName, brandLink, brandName, itemPrice, itemDiscount, addUrl)
	.main-slider__item
		// slider img
		.main-slider__img-wrapper
			figure.main-slider__figure
				img.main-slider__img(src=imageUrl, alt=imageAlt)
		// slider caption
		.main-slider__info
			.main-slider__logo-wrapper
				img.main-slider__logo(src=logoUrl, alt=logoAlt)
			p.main-slider__description= productName + " - " 
				span.main-slider__brand
					a(href=brandLink, rel='nofollow')= brandName
			p.main-slider__price= itemPrice 
				span.main-slider__discount= itemDiscount
			.main-slider__add-btn
				a.main-slider__add-link.btn--bordered(href=addUrl, rel='nofollow') Add to cart

